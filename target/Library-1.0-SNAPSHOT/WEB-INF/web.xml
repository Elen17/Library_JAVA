<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">


    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.library.servlets.HomePage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/library/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/library</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>com.library.servlets.MainPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/library/author</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>InsertAuthor</servlet-name>
        <servlet-class>com.library.servlets.InsertingAuthor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertAuthor</servlet-name>
        <url-pattern>/library/insert/author</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteAuthor</servlet-name>
        <servlet-class>com.library.servlets.DeleteAuthor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAuthor</servlet-name>
        <url-pattern>/library/delete/author</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditAuthor</servlet-name>
        <servlet-class>com.library.servlets.EditAuthor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditAuthor</servlet-name>
        <url-pattern>/library/edit/author</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AddHeaders</filter-name>
        <filter-class>com.library.servlets.Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AddHeaders</filter-name>
        <url-pattern>/library</url-pattern>
    </filter-mapping>
</web-app>
